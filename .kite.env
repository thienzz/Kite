# AI Model API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
COHERE_API_KEY=...

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_SLM_MODEL=llama-3-8b
TEMPERATURE=0.7
MAX_TOKENS=2048

# Vector Database Configuration
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=agentic-ai

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentic_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=agentic_ai

# Payment Processing (for examples)
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring & Observability
SENTRY_DSN=https://...@sentry.io/...
PROMETHEUS_PORT=9090

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=30
AGENT_ENABLE_HUMAN_IN_LOOP=true

# Cost Controls
MAX_COST_PER_REQUEST=0.50
DAILY_COST_LIMIT=100.00
ENABLE_COST_TRACKING=true

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_MULTI_AGENT_ROUTING=true
ENABLE_MEMORY_SYSTEMS=true
ENABLE_MCP_INTEGRATION=true

VECTOR_BACKEND=memory
LLM_TIMEOUT=180
LLM_PROVIDER=ollama
LLM_MODEL=llama3
SLM_PROVIDER=ollama
SLM_SQL_MODEL=llama3
SLM_CLASSIFIER_MODEL=llama3
