[build-system]
requires = ["setuptools>=45", "wheel", "setuptools_scm[toml]>=6.2"]
build-backend = "setuptools.build_meta"

[project]
name = "kite-framework"
version = "0.1.0"
description = "Production-Ready Agentic AI Framework with Enterprise Safety"
readme = "README.md"
requires-python = ">=3.8"
license = {text = "MIT"}
authors = [
    {name = "Thien Nguyen", email = "your.email@example.com"}
]
keywords = ["ai", "agents", "llm", "production-ready", "safety", "circuit-breaker", "agentic-ai"]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "Topic :: Software Development :: Libraries :: Application Frameworks",
    "Topic :: Scientific/Engineering :: Artificial Intelligence",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]

[project.urls]
Homepage = "https://github.com/thienzz/Kite"
Documentation = "https://github.com/thienzz/Kite/tree/main/docs"
Repository = "https://github.com/thienzz/Kite"
"Bug Tracker" = "https://github.com/thienzz/Kite/issues"

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-asyncio>=0.21.0",
    "pytest-cov>=4.0.0",
    "black>=23.0.0",
    "flake8>=6.0.0",
    "mypy>=1.0.0",
]

[tool.setuptools]
packages = {find = {exclude = ["tests", "tests.*", "examples", "examples.*"]}}

[tool.setuptools.package-data]
kite = ["*.json", "*.yaml", "*.yml", "*.txt"]
